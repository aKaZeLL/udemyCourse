{% extends 'base.html.twig' %}

{% block title %} Elenco Pietanze {% endblock %}

{% block body %}

{% for message in app.flashes('success')%}
	<div class="alert alert-success">
		<h4>{{message}}</h4>
	</div>
{% endfor%}

<br>
<div class="container">
	<h2>Editor Pietanze</h2>
	<br>
	<table class="table table-striped">
		<thead>
			<tr>
				<td>Numero Ordinazione</td>
				<td>Nome</td>
				<td>Descrizione</td>
				<td>Prezzo</td>
				<td></td>
				<td><a href="{{ path('app_dishes.create') }}">Aggiungi</a></td>
			</tr>
		</thead>
		<tbody>
			{% for dish in dishes %}
				<tr>
					<td>{{ dish.id }}</td>
					<td><a href="{{ path('app_dishes.image',{id: dish.id}) }}">{{ dish.name }}</a></td>
					<td>{{ dish.description }}</td>
					<td>{{ dish.price }}</td>
					<td><a href="{{ path('app_dishes.create',{id: dish.id}) }}">Modifica</a></td>
					<td><a href="{{ path('app_dishes.remove',{id: dish.id}) }}">Elimina</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
