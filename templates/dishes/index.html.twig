{% extends 'base.html.twig' %}

{% block title %} Elenco Pietanze {% endblock %}

{% block body %}
<br>
<div class="container">
	<h2>Editor Pietanze</h2>
	<br>
	<table class="table table-striped">
		<thead>
			<tr>
				<td>Numero Ordinazione</td>
				<td>Nome</td>
				<td>Descrizione</td>
			</tr>
		</thead>
		<tbody>
			{% for dish in dishes %}
				<tr>
					<td>{{ dish.id }}</td>
					<td>{{ dish.name }}</td>
					<td>{{ dish.description }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
