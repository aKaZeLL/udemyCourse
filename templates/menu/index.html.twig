{% extends 'base.html.twig' %}

{% block body %}
	<!-- Playlist section -->
	<section class="playlist-section spad">
		<div class="container-fluid">
			<div class="section-title">
				<h2>Menu</h2>
			</div>
			<div class="container">
				<ul class="playlist-filter controls">
					<li class="control" data-filter=".Antipasti">Antipasti</li>
					<li class="control" data-filter=".Primi">Primi</li>
					<li class="control" data-filter=".Secondi">Secondi</li>
					<li class="control" data-filter=".Dessert">Dessert</li>
					<li class="control" data-filter=".Frutta">Frutta</li>
					<li class="control" data-filter=".Bevande">Bevande</li>
					<li class="control" data-filter="all">Tutti</li>
				</ul>
			</div>                                              
			<div class="clearfix"></div>
			<div class="row playlist-area">
			{% for dish in dishes %}
				<div class="mix col-lg-3 col-md-4 col-sm-6 {{dish.category}}">
					<div class="playlist-item">
						<img src="{{ asset('images/') ~ dish.image}}">
						<h5>{{ dish.description }} - {{ dish.price }}€</h5>
						<p>Ordine n° {{ dish.id }}</p>
					</div>
				</div>
			{% endfor %}
			</div>
		</div>
	</section>
	<!-- Playlist section end -->
{% endblock %}
